			<script>
				$(document)
						.ready(
								function() {
									var form = $('#vezbeWrapper');
									var addButton = $('#dodajVezbuBtn');
									var removeButton = $('#ukloniVezbuBtn');

									addButton
											.click(function() {
												var newInput = $('<div class="d-flex justify-content-between align-items-end mb-3 singleVezbe">'
														+ '<div class="col-6">'
														+ '<label for="inputState" class="form-label">Naziv vežbe</label>'
														+ '<form:select multiple="single" id="inputState" class="form-select" path="idVezbi">'
														+ '<option value="-1">Vežba</option>'
														+ '<c:forEach items="${ vezbe }" var="k">'
														+ '<option value="${k.idVezbe}">${k.naziv}</option>'
														+ '</c:forEach>'
														+ '</form:select>'
														+ '</div>'
														+ '<p>-</p>'
														+ '<div class="col-2">'
														+ '<label for="inputAddress" class="form-label">Broj serija</label>'
														+ '<form:input type="number" class="form-control" id="inputAddress" path="serije" />'
														+ '</div>'
														+ '<p>x</p>'
														+ '<div class="col-2">'
														+ '<label for="inputAddress" class="form-label">Broj ponavljanja</label>'
														+ '<form:input type="number" class="form-control" id="inputAddress" path="ponavljanja" />'
														+ '</div>'
														+ '<button class="removeExerciseBtn" type="button">Ukloni vezbu</button>'
														+ '</div>');
												form.append(newInput);
											});

									// Event delegation for dynamically added elements
									addButton.click(function() {
										$(this).closest('.singleVezbe')
												.remove();
									});
								});
			</script>
